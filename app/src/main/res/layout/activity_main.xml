<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/train"
        tools:context=".LoadingScreen">

    <ProgressBar android:layout_height="wrap_content" android:layout_width="wrap_content"
                 app:layout_constraintVertical_bias="0.884"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintHorizontal_bias="0.498"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 style="?android:attr/progressBarStyle"
                 android:id="@+id/progressBar"/>

    <TextView android:layout_height="41dp" android:layout_width="183dp"
              app:layout_constraintVertical_bias="0.061"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.497"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:id="@+id/textView"
              android:textSize="40dp"
              android:textColor="@android:color/white"
              android:text="Locatomatic"
              android:fontFamily="cursive"/>

    <ImageView android:layout_height="83dp"
               android:layout_width="85dp"
               app:layout_constraintVertical_bias="0.041"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:id="@+id/imageView"
               android:src="@drawable/logoimg" app:layout_constraintStart_toEndOf="@+id/textView"
               android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>